    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingTop="115dp"

    >
    <ua.com.vendetta8247.testmate.RichEditor
        android:id="@+id/editor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
